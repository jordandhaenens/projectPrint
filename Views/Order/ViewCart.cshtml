@model ProjectPrintDos.Models.OrderViewModels.ViewCartVM


<!-- Shopping Cart Table -->
<table class="table">
    <thead>
        <tr>
            <th>
                <h4>Shopping Cart</h4>
            </th>
            <th>
                <h4></h4>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.userProducts)
        {
            <tr>
                <td>
                    <a asp-controller="CompositeProduct" asp-action="Details" asp-route-id="@item.CompositeProductID">
                        <p>
                            @item.ProductType.Title-@item.ProductType.BaseColor <br>
                            @if (@item.Ink != null && @item.Screen != null)
                            {
                                @item.Ink.Title <br>
                                @item.Screen.Title
                            }
                        </p>    
                    </a>
                </td>
                <td>
                    <p>$@item.Price</p>
                </td>
                <td>
                    <form asp-action="RemoveFromCart" asp-route-id="@item.CompositeProductID">
                        <input type="submit" value="Remove from Cart" class="btn btn-default">
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td class="col-sm-6 col-md-8"></td>
            <td>
                <p>$@Model.ShoppingCartTotal</p>
            </td>
            <td>
                <a class="btn btn-default" asp-controller="Order" asp-action="CloseOrder" asp-route-id="@Model.OrderID">Close Order</a>
            </td>
        </tr>
    </tbody>
</table>