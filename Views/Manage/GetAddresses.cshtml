@model ProjectPrintDos.Models.ManageViewModels.AddressVM


<!-- BillingAddress Table -->
<h4>Billing Address</h4>
<p>
    <a asp-controller="BillingAddress" asp-action="Create">Add New Billing Address</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h4>Address</h4>
            </th>
            <th>
                <h4>Is Default</h4>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BillingAddresses)
        {
            <tr>
                <td>
                    <a asp-controller="BillingAddress" asp-action="Details" asp-route-id="@item.BillingAddressID">
                        <p>
                            @item.Street <br>
                            @item.Unit <br>
                            @item.City <br>
                        </p>    
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    <a asp-controller="ProductType" asp-action="Edit" asp-route-id="@item.BillingAddressID">Edit</a> | 
                    <a asp-controller="ProductType" asp-action="Delete" asp-route-id="@item.BillingAddressID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>