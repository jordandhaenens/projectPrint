@model IEnumerable<ProjectPrintDos.Models.CompositeProduct>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Ink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Screen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ink.InkID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType.BaseColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Screen.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompositeProductID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompositeProductID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompositeProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
